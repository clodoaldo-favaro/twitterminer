<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.twitterminer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TwitterMiner">
        <activity
            android:name=".ColetarTweetsActivity"
            android:exported="true" />
        <activity
            android:name=".PesquisaDetalheActivity"
            android:exported="true" />
        <activity
            android:name=".NovoTweetActivity"
            android:exported="true" />
        <activity
            android:name=".NovaPesquisaActivity"
            android:exported="true" />
        <activity
            android:name=".TelaInicialActivity"
            android:exported="true" />
        <activity
            android:name=".ListagemPesquisasActivity"
            android:exported="true"
            android:label="@string/title_activity_listagem_pesquisas"
            android:theme="@style/Theme.TwitterMiner.NoActionBar" />
        <activity
            android:name=".ListagemTweetActivity"
            android:exported="true"
            android:label="ListagemTweetActivity"
            android:theme="@style/Theme.TwitterMiner.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TwitterMiner.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>